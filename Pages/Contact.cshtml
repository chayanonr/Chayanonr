@page
@model chayanonr.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}

<section id="contact">
    <h2>Contact Me</h2>
    <form method="post">
        <div>
            <label for="name">Your Name</label>
            <input type="text" id="name" asp-for="Name" placeholder="Your Name" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <label for="email">Your Email</label>
            <input type="email" id="email" asp-for="Email" placeholder="Your Email" required>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div>
            <label for="message">Your Message</label>
            <textarea id="message" asp-for="Message" rows="5" placeholder="Your Message" required></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
        <button type="submit">Send Message</button>
    </form>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }
</section>
