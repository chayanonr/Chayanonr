@page
@model chayanonr.Pages.ContactModel
@{
    ViewData["Title"] = "Contact | Chayanonr";
}
<body id="contact">
<section id="contact">
    <h2>Get in Touch</h2>
    <p>If you have any questions, feel free to send me a message!</p>
    
    <form method="post">
        <div class="form-group">
            <label for="name">Your Name</label>
            <input type="text" id="name" asp-for="Name" placeholder="Enter your name" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="email">Your Email</label>
            <input type="email" id="email" asp-for="Email" placeholder="Enter your email" required>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="message">Your Message</label>
            <textarea id="message" asp-for="Message" rows="5" placeholder="Type your message here..." required></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>

        <button type="submit">Send Message</button>
    </form>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }
</section>
</body>
